<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/allbackground" >

    <Button
        android:id="@+id/btn_sina_weibo"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:background="@drawable/imageview_change_color"
        android:layout_marginTop="20dp"
        android:text="微博认证OAUTH2.0" />

    <Button
        android:id="@+id/btn_sina_click"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/btn_sina_weibo"
        android:layout_marginTop="20dp"
        android:background="@drawable/imageview_change_color"
        android:text="单点登入sso" />

    <Button
        android:id="@+id/btn_sina_cancel"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sina_weibo"
        android:layout_marginTop="8dp"
        android:background="@drawable/imageview_change_color"
        android:text="注销" />

    <TextView
        android:id="@+id/tv_sina_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sina_cancel"
        android:layout_marginTop="5dp"
        android:textColor="#FFFFFF"
        android:text="使用sso登入，请检查手机上是否已安装新浪微博博客客户端，目前仅3.0及以上微博客户端版本支持sso；如果未安装，将自动转为Oauth2.0进行认证" />

</RelativeLayout>