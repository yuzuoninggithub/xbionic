<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/peoplebackground" >

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topnav" >

        <ImageButton
            android:id="@+id/iv_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_color_change" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="登入"
            android:textColor="@color/fontcolor"
            android:textSize="34sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_top" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="无线增值服务应用，欢迎您!"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_username_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/enterbound"
        android:drawableStart="@drawable/personpicture"
        android:gravity="center"
        android:hint="用户名" />

    <EditText
        android:id="@+id/et_password_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_username_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/enterbound"
        android:drawableStart="@drawable/keypicture"
        android:gravity="center"
        android:hint="密码" />

    <Button
        android:id="@+id/iv_bulo_login"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/imageview_change_orange" />

    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_bulo_login"
        android:layout_marginTop="15dp"
        android:drawableBottom="@drawable/user_center_line"
        android:text="忘记密码?"
        android:textColor="#FBFBFC" />

</RelativeLayout>